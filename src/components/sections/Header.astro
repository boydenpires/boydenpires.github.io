---
import { Image } from "astro:assets";
import imgHeader from "../../assets/images/img-header.jpg";
import Button from "../Button.astro";
---

<!-- <header
  class="min-h-[calc(100vh-140px)] mx-auto w-full lg:max-w-5xl px-6 py-12 md:px-12 lg:px-16 flex flex-col lg:flex-row items-center justify-between gap-10"
> -->
<header
  class="min-h-[calc(100dvh-80px)] lg:min-h-[calc(100vh-80px)] mx-auto w-full lg:max-w-5xl px-6 md:px-12 lg:px-16 pt-12 lg:py-12 flex flex-col lg:flex-row items-center justify-start lg:justify-between gap-10"
>
  <div class="w-full">
    <!-- TODO: handle images properly on both mobile and desktop -->
    <Image
      class="lg:hidden size-20 object-cover rounded-full mb-6"
      src={imgHeader}
      alt="A photo of me"
      width={220}
      data-tilt
      data-tilt-glare
      data-tilt-max-glare="0.3"
    />
    <h1
      class="text-black font-bold text-4xl lg:text-5xl mb-[24px] lg:mb-[42px]"
    >
      Hey, I'm <br /> Boyden Pires.
    </h1>
    <p
      class="text-black font-medium text-2xl lg:text-3xl mb-[48px] lg:mb-[60px]"
    >
      A <span class="text-gray-500">Frontend Developer</span>, <br
        class="lg:hidden"
      /> turning ideas into <br /> interfaces people enjoy using.
    </p>

    <Button
      text="Take a Look"
      variant="inverted"
      icon="arrow_downward_alt"
      iconPosition="right"
    />
  </div>
  <Image
    class="hidden lg:block rounded-3xl"
    src={imgHeader}
    alt="A photo of me"
    width={220}
    data-tilt
    data-tilt-glare
    data-tilt-max-glare="0.3"
  />
</header>
