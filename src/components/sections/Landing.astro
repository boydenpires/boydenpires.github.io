---
import Navbar from "../Navbar.astro";
import Marquee from "../Marquee.astro";
import Header from "../Header.astro";

const marqueeList = [
  "Based in Goa, India",
  "4+ years of Experience",
  "Vue / React / Typescript",
  "Agile Teams",
  "Open to opportunities",
  "Guitar enthusiast",
];

const anchors = [
  { id: "about", text: "About" },
  { id: "experience", text: "Experience" },
  { id: "tech-stack", text: "Tech Stack" },
  { id: "workflow", text: "Workflow" },
];
---

<section>
  <Marquee list={marqueeList} />
  <Navbar class="wrapper sticky top-0 z-10" anchors={anchors} />
  <Header />
</section>
