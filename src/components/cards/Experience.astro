---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import Button from "../Button.astro";

interface Props {
  experienceId: string;
  label: string;
  logo: ImageMetadata;
  logoLink: string;
  yoe: string;
  heading: string;
  summary: string;
}

const { experienceId, label, logo, logoLink, yoe, heading, summary } =
  Astro.props;
---

<div
  class="w-[85%] md:w-[65%] xl:w-3xl shrink-0 rounded-4xl bg-[#E0E0F3] px-8 py-6 md:px-10 md:py-8"
>
  <span
    class="inline-block px-2 py-1 bg-green-50 rounded-[8px] text-[12px] text-black mb-4"
    >{label}</span
  >
  <div class="flex items-center gap-4 mb-6">
    <a href={logoLink} target="_blank">
      <Image src={logo} alt="The logo of my current company" width={54} />
    </a>
    <span class="font-semibold text-[14px] text-[#545454]">{yoe}</span>
  </div>
  <h2 class="font-medium text-xl mb-1">
    {heading}
  </h2>
  <p class="text-[16px] mb-8">
    {summary}
  </p>
  <Button
    text="Read More"
    size="small"
    icon="add"
    iconPosition="right"
    data-experience-id={experienceId}
  />
</div>
