---
import { Image } from "astro:assets";
import Button from "../Button.astro";

interface Props {
  label: string;
  logo: ImageMetadata;
  logoLink: string;
  yoe: string;
  heading: string;
  summary: string;
}

const { label, logo, logoLink, yoe, heading, summary } = Astro.props;
---

<div
  class="hidden md:place-items-center place-items-end fixed inset-0 bg-black/50 backdrop-blur-xs z-50 opacity-0 transition-opacity duration-300"
  id="modalOverlayExperience"
  aria-hidden="true"
  role="dialog"
  aria-modal="true"
>
  <div
    id="modalExperience"
    class="bg-white rounded-t-[28px] rounded-b-0 md:rounded-[28px] w-full md:w-auto md:max-w-3xl h-[85vh] md:h-auto px-6 pb-8 md:px-12 md:py-10 transform translate-y-full md:translate-y-0 md:scale-95 transition-transform duration-300 origin-bottom md:origin-center overflow-y-auto relative"
  >
    <div
      class="flex items-center justify-between pt-8 pb-4 sticky top-0 bg-white/95 backdrop-blur-xs"
    >
      <span
        id="experienceModalLabel"
        class="inline-block px-2 py-1 bg-green-50 rounded-[8px] text-[12px] text-black"
        >{label}</span
      >
      <Button
        id="modalCloseExperience"
        size="small"
        icon="close"
        iconPosition="iconOnly"
        aria-label="Close modal"
      />
    </div>
    <div class="flex items-center gap-4 mb-8">
      <a id="experienceModalLogoLink" href={logoLink} target="_blank">
        <Image
          id="experienceModalLogo"
          src={logo}
          alt={`Logo of ${label}`}
          width={54}
        />
      </a>
      <span
        id="experienceModalYoe"
        class="font-semibold text-[14px] text-[#545454]">{yoe}</span
      >
    </div>
    <h2 id="experienceModalHeading" class="font-medium text-xl mb-4">
      {heading}
    </h2>
    <p id="experienceModalSummary" class="text-[16px] whitespace-pre-line">
      {summary}
    </p>
  </div>
</div>
